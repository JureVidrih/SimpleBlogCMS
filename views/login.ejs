<!doctype html>
<html>
    <head>
        <% include partials/head %>
        <style>
            input {
                width: 100%;
            }
        </style>
        <title>SimpleBlogCMS - Login</title>
    </head>
    <body>
        <% include partials/navbar %>
        <div class="container col-2 mt-5">
            <form method="POST" action="/login">
                <div class="form-group">
                    <label>Username: <input type="text" name="username" placeholder="Your username.." pattern=".{5,15}" required></label><br>
